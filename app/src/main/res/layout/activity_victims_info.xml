<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car_photo"
    tools:context=".VictimsInfo">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/sign_out"
        android:layout_above="@id/start_tracking"
        android:layout_alignLeft="@id/sign_out"
        android:layout_alignRight="@id/start_tracking"
        android:background="@color/main_color"
        android:text="sign_out"
        android:layout_marginBottom="50dp"
         />

    <Button
        android:layout_centerInParent="true"
        android:id="@+id/start_tracking"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/main_color"
        android:text="start_Tracking"
         />

    <Button
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@id/sign_out"
        android:layout_alignRight="@id/start_tracking"
        android:layout_below="@id/start_tracking"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/get_activities"
        android:background="@color/main_color"
        android:padding="20dp"
        android:text="get_activities"
        />
</RelativeLayout>